<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:radius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="#999999" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:radius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="#999999" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:radius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
            <gradient android:endColor="#f85f48" android:startColor="#f86e52" android:type="linear" />
        </shape>
    </item>
</selector>